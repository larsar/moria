<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<!DOCTYPE project [
	  <!ENTITY % locator-entities SYSTEM "file:locator.ent">
	  %locator-entities;
	  ]>

<project>
  <extend>${basedir}/../../project.xml</extend>
  <name>Mellon Demo Service</name>
  <id>mellon</id>
  <currentVersion>1.0-b1-SNAPSHOT</currentVersion>
  <package>no.feide.mellon.*</package>
  <shortDescription>Mellon API and Demo Service</shortDescription>

  <description/>

  <siteDirectory>/home/groups/m/mo/moria/htdocs/mellon</siteDirectory>

  <dependencies>

    <!-- Axis deps -->
    &dep-axis;
    &dep-jaxrpc;
    &dep-saaj;
    &dep-commons-discovery;

    <!-- Misc deps -->
    &dep-log4j;
    &dep-servlet-api;
    &dep-jsp-api;
    &dep-xerces-xercesImpl;
    &dep-xerces-xmlParserAPIs;
    &dep-jdom;
    &dep-commons-logging;

  </dependencies>

  <build>

    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>*.xml</include>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.resourcebundle.dir}</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>

    <unitTest>
      <resources>
        <resource>
          <directory>src/test/bundles</directory>
          <includes>
            <include>*.properties</include>
          </includes>
        </resource>
        <resource>
          <directory>src/test/conf</directory>
          <includes>
            <include>*.properties</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

  </build>
</project>
