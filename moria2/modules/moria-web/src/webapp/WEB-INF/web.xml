   version="2.4">

  <display-name>Moria</display-name>
  <description>Moria Web Authentication service</description>

  <context-param>
    <param-name>jsp.location</param-name>
    <param-value>/WEB-INF/jsp</param-value>
  </context-param>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
