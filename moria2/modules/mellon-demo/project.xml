<?xml version="1.0" encoding="UTF-8"?>

<!-- $Id$ -->

<!DOCTYPE project [
	  <!ENTITY % locator-entities SYSTEM "file:locator.ent">
	  %locator-entities;
	  ]>

<project>
  <extend>${basedir}/../../project.xml</extend>
  <name>Mellon2 Demo</name>
  <id>mellon-demo</id>
  <currentVersion>1.0-b1-SNAPSHOT</currentVersion>
  <package>no.feide.moria.*</package>
  <shortDescription>Mellon2 Client-Side Demo Service(s)</shortDescription>

  <description/>

  <siteDirectory>/home/groups/m/mo/moria/htdocs/moria</siteDirectory>

  <dependencies>

    <!-- Axis deps -->
    &dep-axis;
    &dep-jaxrpc;
    &dep-saaj;
    &dep-commons-discovery;
    &dep-wsdl4j;

    <!-- Misc deps -->
    &dep-servlet-api;
    &dep-commons-logging;

    <!-- Moria2 deps -->
    &dep-mellon;

  </dependencies>

  <build>

    <resources>
      <resource>
        <directory>src/conf</directory>
        <includes>
          <include>*.xml</include>
          <include>*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>${project.resourcebundle.dir}</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>

    <unitTest>
      <resources>
        <resource>
          <directory>src/test/bundles</directory>
          <includes>
            <include>*.properties</include>
          </includes>
        </resource>
        <resource>
          <directory>src/test/conf</directory>
          <includes>
            <include>*.properties</include>
          </includes>
        </resource>
      </resources>
    </unitTest>

  </build>
</project>
