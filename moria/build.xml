<project name="W3LS (Mellon/Moria)"
         default="all:redeploy"
         basedir=".">

  <property file="${user.home}/build.properties"/>
  <property file="build.properties"/>

  <taskdef name="deploy"
           classname="org.apache.catalina.ant.DeployTask"
           classpath="${jwsdp_home}/server/lib/catalina-ant.jar"/>
  <taskdef name="undeploy"
           classname="org.apache.catalina.ant.UndeployTask"
           classpath="${jwsdp_home}/server/lib/catalina-ant.jar"/>



  <!-- Common Mellon/Moria targets. -->
  <target name="all:clean"
          description="All: Clean up everything"
          depends="mellon:clean,moria:clean,test:clean">
    <delete dir="dist"/>
  </target>

  <target name="all:build"
          description="All: Build everything, no deployment"
          depends="moria:build,mellon:build,test:build"/>



  <!-- Targets to build/deploy Moria. -->
  <target name="moria:prepare"
          description="Moria: Prepare build directory">
    <mkdir dir="build.moria/WEB-INF/classes"/>
    <mkdir dir="dist"/>
    <mkdir dir="build.moria/WEB-INF/classes/templates"/>
    <copy todir="build.moria/WEB-INF/classes/templates">
      <fileset dir="moria/templates">
	<include name="**/*.vtl"/>
      </fileset>
    </copy>  
    <copy todir="build.moria/WEB-INF/classes">
      <fileset dir="moria/templates">
	<include name="**/*.properties"/>
      </fileset>
    </copy>
    <copy file="build.moria/WEB-INF/classes/login_nb.properties" tofile="build.moria/WEB-INF/classes/login_no.properties"/>
    <copy file="moria/config/jaxrpc-ri.xml" todir="build.moria/WEB-INF"/>
    <copy file="moria/config/web.xml"       todir="build.moria/WEB-INF"/>
    <delete file="build.moria/WEB-INF/classes/moria.properties"/>
    <echo message="Using config: ${moria_config}"/>
    <copy file="${moria_config}" tofile="build.moria/WEB-INF/classes/moria.properties"/>
    <copy todir="build.moria/WEB-INF/lib">
      <fileset dir="moria/lib/">
	<include name="**/*.jar"/>
      </fileset>
      <fileset dir="lib/">
	<include name="**/*.jar"/>
      </fileset>
    </copy>  
  </target>

  <target name="moria:compile"
          description="Moria: Compile source"
          depends="moria:prepare">
    <javac srcdir="src"
           destdir="build.moria/WEB-INF/classes"
           includes="no/feide/moria/**">
	   <classpath>
                <fileset dir="lib/">
                  <include name="*.jar"/>
                </fileset>
                <fileset dir="moria/lib/">
                  <include name="*.jar"/>
                </fileset>
	   </classpath>
    </javac>
  </target>

  <target name="moria:war"
          description="Moria: Create WAR"
          depends="moria:compile">
    <delete file="dist/feide-moria-ws.war"/>
    <jar jarfile="dist/feide-moria-ws.war">
      <fileset dir="build.moria">
        <include name="WEB-INF/**"/>
        <include name="templates/**"/>
      </fileset>
    </jar>
  </target>

  <target name="moria:wsdeploy"
          description="Moria: Process WAR"
	  depends="moria:war">
    <delete file="dist/tmp-feide-moria.war"/>
    <exec executable="${jaxrpc_home}/bin/wsdeploy.sh">
      <arg line="-o"/>
      <arg line="dist/feide-moria.war"/>
      <arg line="dist/feide-moria-ws.war"/>
      <arg line="-verbose"/>
    </exec>
  </target>

  <target name="moria:wsdl"
          description="Moria: Export WSDL from WAR"
	  depends="moria:wsdeploy">
    <mkdir dir="dist/tmp"/>
    <exec executable="jar" dir="dist/tmp">
      <arg line="-xf ../feide-moria.war WEB-INF/FeideAuthentication.wsdl"/>
    </exec>
    <exec executable="sed" output="FeideAuthentication.wsdl">
      <arg line="'s!REPLACE_WITH_ACTUAL_URL!${wsdl_url}!' dist/tmp/WEB-INF/FeideAuthentication.wsdl"/>
    </exec>
    <delete dir="dist/tmp"/>
  </target>

  <target name="moria:build"
          description="Moria: Build deployable WAR"
          depends="moria:wsdl"/>

  <target name="moria:deploy"
          description="Moria: Deploy to Tomcat">
    <deploy url="${jwsdp_manager_url}"
            username="${jwsdp_manager_username}"
            password="${jwsdp_manager_password}"
            path="/feide-moria"
            war="file:dist/feide-moria.war"/>
  </target>

  <target name="moria:undeploy"
          description="Moria: Undeploy from Tomcat">
     <undeploy url="${jwsdp_manager_url}"
              username="${jwsdp_manager_username}"
              password="${jwsdp_manager_password}"
              path="/feide-moria"/>
  </target>

  <target name="moria:redeploy"
          description="Moria: Build and redeploy"
          depends="moria:build,moria:undeploy,moria:deploy"/>

  <target name="moria:clean"
          description="Moria: Clean up">
    <delete dir="build.moria"/>
    <delete file="FeideAuthentication.wsdl"/>
  </target>



  <!-- Targets to build the Mellon API. -->
  <target name="mellon:prepare"
          description="Mellon API: Prepare build directory">
    <mkdir dir="build.mellon"/>
    <mkdir dir="build.mellon.filter"/>
    <mkdir dir="build.mellon.demo/WEB-INF/classes"/>
    <copy todir="build.mellon.demo/WEB-INF/lib">
      <fileset dir="moria/lib/">
	<include name="**/*.jar"/>
      </fileset>
      <fileset dir="lib/">
	<include name="**/*.jar"/>
      </fileset>
    </copy>  
    <mkdir dir="dist"/>
  </target>

  <target name="mellon:wscompile"
          description="Mellon API: Generate JAX-RPC client stubs"
          depends="mellon:prepare">
    <exec executable="${jaxrpc_home}/bin/wscompile.sh">
      <arg line="-gen:client"/>
      <arg line="-d build.mellon"/>
      <arg line="mellon/config/jaxrpc.xml"/>
    </exec>
  </target>

  <target name="mellon:compile"
          description="Mellon API: Compile source"
          depends="mellon:wscompile">
    <javac srcdir="src"
           destdir="build.mellon"
           includes="no/feide/mellon/*"
           excludes="no/feide/mellon/servlet/*,no/feide/mellon/test/*">
	   <classpath>
             <fileset dir="lib/" includes="*.jar"/>
	   </classpath>
    </javac>
  </target>

  <target name="mellon:filter:compile"
          description="Mellon filter: Compile source"
          depends="mellon:jar">
    <javac srcdir="src"
           destdir="build.mellon.filter"
           includes="no/feide/mellon/filter/*">
	   <classpath>
             <fileset dir="lib/" includes="*.jar"/>
	     <fileset file="dist/feide-mellon-api.jar"/>
	   </classpath>
    </javac>
  </target>


  <target name="mellon:filter:jar"
          description="Mellon filter: Create JAR file"
	  depends="mellon:filter:compile">
    <delete file="dist/feide-mellon-filter.jar"/>
    <jar destfile="dist/feide-mellon-filter.jar" basedir="build.mellon.filter"/>
  </target>

  <target name="mellon:demo:compile"
          description="Mellon demo: Compile source"
          depends="mellon:jar,mellon:filter:jar">
    <javac srcdir="src"
           destdir="build.mellon.demo/WEB-INF/classes"
           includes="no/feide/mellon/servlet/*">
	   <classpath>
             <fileset dir="lib/" includes="*.jar"/>
	     <fileset file="dist/feide-mellon-api.jar"/>
	   </classpath>
    </javac>
  </target>

  <target name="mellon:demo:war"
          description="Mellon demo: Create WAR file"
	  depends="mellon:demo:compile">
	  <delete file="build.mellon.demo/WEB-INF/web.xml"/>
	  <delete file="build.mellon.demo/WEB-INF/classes/mellon.properties"/>
          <delete file="dist/feide-mellon-demo.war"/>
	  <copy file="mellon/config/web.xml" toFile="build.mellon.demo/WEB-INF/web.xml"/>
	  <copy file="${mellon_config}" toFile="build.mellon.demo/WEB-INF/classes/mellon.properties"/>

    <copy todir="build.mellon.demo/WEB-INF/lib">
      <fileset dir="dist">
	<include name="**/feide-mellon*.jar"/>
      </fileset>
    </copy>  

    <jar destfile="dist/feide-mellon-demo.war" basedir="build.mellon.demo"/>
  </target>


  <target name="mellon:jar"
          description="Mellon API: Create JAR file"
	  depends="mellon:compile">
    <delete file="dist/feide-mellon-api.jar"/>
    <jar destfile="dist/feide-mellon-api.jar" basedir="build.mellon"/>

  </target>



  <target name="mellon:build"
          description="Mellon API: All steps necessary to build the JAR"
          depends="mellon:jar"/>

  <target name="mellon:clean"
          description="Mellon API: Clean up">
    <delete dir="build.mellon"/>
    <delete dir="build.mellon.filter"/>
    <delete dir="build.mellon.demo"/>
    <delete file="dist/feide-mellon-filter.jar"/>
    <delete file="dist/feide-mellon-api.jar"/>
  </target>



  <!-- Mellon API test code -->
  <target name="test:prepare"
          description="Test: Prepare build directory">
    <mkdir dir="build.test"/>
    <mkdir dir="dist"/>
  </target>

  <target name="test:compile"
          description="Test: Compile source"
          depends="test:prepare">
    <javac srcdir="src"
           destdir="build.test"
           includes="no/feide/mellon/test/**">
      <classpath>
        <fileset dir="lib/" includes="*.jar"/>
        <fileset dir="moria/lib/" includes="*.jar"/>
        <fileset dir="dist/" includes="feide-mellon-api.jar"/>
      </classpath>
    </javac>
  </target>

  <target name="test:jar"
          description="Test: Create JAR file"
          depends="test:prepare">
    <delete file="dist/AuthenticationServiceClient.jar"/>
    <jar destfile="dist/AuthenticationServiceClient.jar"
         basedir="build.test"
         includes="Mellon.xml no/feide/mellon/test/*"/>
  </target>

  <target name="test:build"
          description="Test: All steps necessary to build the test"
          depends="test:compile,test:jar"/>

  <target name="test:run"
          description="Test: Run the test code">
    <echo message="Using config: ${mellon_config}"/>
    <java fork="on"
          classname="no.feide.mellon.test.AuthenticationServiceClient">
      <classpath>
        <fileset dir="dist" includes="AuthenticationServiceClient.jar feide-mellon-api.jar"/>
        <fileset dir="lib/" includes="*.jar"/>
        <fileset dir="moria/lib/" includes="*.jar"/>
      </classpath>
      <arg value="${mellon_config}"/>
    </java>
  </target> 

  <target name="test:clean"
          description="Test: Clean up (JAR and build directory)">
    <delete dir="build.test"/>
    <delete file="dist/AuthenticationServiceClient.jar"/>
  </target>

</project>
