<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>feide-moria</display-name>
    <description>Moria</description>

    <servlet>
        <servlet-name>
	    Login
        </servlet-name>
        <servlet-class>
	    no.feide.moria.servlet.LoginServlet
        </servlet-class>
    </servlet>   
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <security-role>
        <role-name>manager</role-name>
    </security-role>

    <security-role>
        <role-name>feide-service</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>FeideAuthentication</web-resource-name>
            <url-pattern>/FeideAuthentication</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>manager</role-name>
            <role-name>feide-service</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    
</web-app>
