<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Moria</display-name>
    <description>Moria login page servlet</description>

    <servlet>
        <servlet-name>
	    Login
        </servlet-name>
        <servlet-class>
	    no.feide.moria.servlet.LoginServlet
        </servlet-class>
    </servlet>   

    <servlet>
        <servlet-name>
	    Logout
        </servlet-name>
        <servlet-class>
	    no.feide.moria.servlet.LogoutServlet
        </servlet-class>
    </servlet>   

    <servlet>
        <servlet-name>
	    Stats
        </servlet-name>
        <servlet-class>
	    no.feide.moria.servlet.StatsServlet
        </servlet-class>
    </servlet>   

    <servlet-mapping>
        <servlet-name>Stats</servlet-name>
        <url-pattern>/Stats</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    
</web-app>
